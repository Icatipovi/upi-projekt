@model IEnumerable<Football.Models.Player>

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background: lightblue;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
    }

    div {
        color: teal;
    }
</style>
<h1>Players</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageMark)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageMark)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Player_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Player_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Player_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
